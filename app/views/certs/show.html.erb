<section>
  <h1>Cert Details</h1>
  <table>
    <colgroup>
      <col class="name" />
      <col class="value" />
    </colgroup>
    <tbody>
    <tr>
      <td>Subject</td><td><%=@cert.subject_dn %></td>
    </tr>
    <tr>
      <td>Subject</td><td><%=@cert.issuer.subject_dn %></td>
    </tr>
    <tr>
      <td>Issuer Chain</td>
      <td>
	<ol>
	  <% @cert.issuer_chain.each do |chain| %>
	    <li><%= chain.subject_dn %></li>
	  <% end %>
	</ol>
    </tr>
    <tr>
      <td>Valid From</td><td><%=@cert.valid_from %></td>
    </tr>
    <tr>
      <td>Valid To</td><td><%=@cert.valid_to %></td>
    </tr>
    <tr>
      <td>Hash</td><td><%=@cert.hash %></td>
    </tr>
    <tr>
      <td>Seen</td><td><%= @conn_count %></td>
    </tr>
    <tr>
      <td>Hash</td><td><!-- %= @cert.sha  % --></td>
    </tr>
    </tbody>
  </table>
</section>

<section>
<h1>Connections</h1>
<table>
  <% @cert.connections.each do |conn| %>
 <tr><td><%= conn.peer %></td><td><%= conn.server %></td><td><%= link_to "details", conn %></td></tr>
  <% end %>
</table>
</section>

<!-- issued_area sets @issued and calls block if @cert issued certificates -->
<section>
  <h1>Issued Certs</h1>
  <table>
   <% @cert.signed.each do |x| %>
   <tr><td><%= x.subject_dn %></td><td><%= link_to "details",x %></td></tr>
   <% end %>
  </table>
</section>

 

